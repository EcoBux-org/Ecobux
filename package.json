{
  "name": "ecobux",
  "version": "0.0.0",
  "description": "EcoBux: Take conservation into your own hands with the power of cryptocurrency",
  "main": "contracts/Ecobux.sol",
  "directories": {
    "test": "test"
  },
  "dependencies": {},
