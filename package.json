{
  "name": "ecobux",
  "version": "0.0.0",
  "description": "EcoBux: Take conservation into your own hands with the power of cryptocurrency",
  "main": "contracts/Ecobux.sol",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "truffle": "^5.1.49"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/contracts-ethereum-package": "^2.5.0",
    "@openzeppelin/gsn-helpers": "^0.2.4",
    "@openzeppelin/gsn-provider": "^0.1.11",
    "@openzeppelin/test-environment": "^0.1.5",
    "@openzeppelin/test-helpers": "^0.5.7",
    "@openzeppelin/upgrades": "^2.8.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.13.0",
    "ganache-cli": "^6.12.0",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "solhint": "^3.2.2",
    "solhint-plugin-prettier": "0.0.4",
    "solidity-coverage": "^0.7.5"
  },
  "scripts": {
    "compile": "npx oz compile",
    "migrate": "npx truffle migrate",
    "gas": "npx ganache-cli --gasLimit 8000000 2> /dev/null 1> /dev/null &",
    "deploy": "npm run gas && npm run migrate",
    "test": "npm run compile && npx mocha test --exit --no-timeout -p -s 500 && npm run lint",
    "coverage": "npx truffle run coverage",
    "lint": "npx npm-run-all -p lint:*",
    "lint:solidity": "npx solhint \"contracts/**/*.sol\"",
    "lint:javascript": "npx eslint test/ migrations/",
    "prettier": "npx npm-run-all -p prettier:*",
    "prettier:solidity": "npx prettier --write \"contracts/**/*.sol\"",
    "prettier:javascript": "npx prettier --write \"test/\" \"migrations\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Watt3r/Ecobux.git"
  },
  "keywords": [
    "Ecobux"
  ],
  "author": "Lucas Oberwager",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Watt3r/Ecobux/issues"
  },
  "homepage": "https://ecobux.org",
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "npm run prettier && npm run lint",
      "post-commit": ".git/hooks/post-commit.playsound"
    }
  }
}
